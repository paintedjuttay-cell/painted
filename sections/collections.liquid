{{ 'section-collections.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .collections-section {
    padding: 4rem 1rem;
    background: #f8fafc;
  }
  
  .collections-container {
    max-width: 80rem;
    margin: 0 auto;
  }
  
  .collections-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .collections-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 1rem;
  }
  
  .collections-subtitle {
    font-size: 1.125rem;
    color: #64748b;
    max-width: 36rem;
    margin: 0 auto 2rem;
  }
  
  .collections-filters {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 3rem;
  }
  
  .filter-btn {
    padding: 0.5rem 1.5rem;
    border-radius: 2rem;
    border: 2px solid #e2e8f0;
    background: white;
    color: #64748b;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }
  
  .filter-btn:hover,
  .filter-btn.active {
    border-color: #8b5cf6;
    background: #8b5cf6;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
  }
  
  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .collection-card {
    position: relative;
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .collection-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }
  
  .card-image-container {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
  }
  
  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .collection-card:hover .card-image {
    transform: scale(1.05);
  }
  
  .card-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: #8b5cf6;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .card-badge.sold-out {
    background: #ef4444;
  }
  
  .card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.8) 0%, rgba(236, 72, 153, 0.8) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
  }
  
  .collection-card:hover .card-overlay {
    opacity: 1;
  }
  
  .card-content {
    padding: 1.5rem;
  }
  
  .card-category {
    color: #8b5cf6;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }
  
  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }
  
  .card-description {
    color: #64748b;
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 1rem;
  }
  
  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .card-price {
    font-size: 1.125rem;
    font-weight: 700;
    color: #1e293b;
  }
  
  .card-artist {
    font-size: 0.75rem;
    color: #64748b;
  }
  
  .collections-cta {
    text-align: center;
  }
  
  .view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
    color: white;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .view-all-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(139, 92, 246, 0.3);
  }
  
  @media (max-width: 768px) {
    .collections-grid {
      grid-template-columns: 1fr;
    }
    
    .collections-filters {
      gap: 0.25rem;
    }
    
    .filter-btn {
      padding: 0.375rem 1rem;
      font-size: 0.875rem;
    }
  }
{%- endstyle -%}

<section class="collections-section" id="collections">
  <div class="collections-container">
    <div class="collections-header">
      <h2 class="collections-title">
        {{ section.settings.title | default: "Artisan Collections" }}
      </h2>
      <p class="collections-subtitle">
        {{ section.settings.subtitle | default: "Discover our curated collections of hand-painted masterpieces, each telling a unique story through art and craftsmanship." }}
      </p>
    </div>

    {%- if section.settings.show_filters -%}
      <div class="collections-filters">
        <button class="filter-btn active" data-filter="all">All Collections</button>
        {%- for collection in collections -%}
          {%- unless collection.id == blank -%}
            <a href="{{ collection.url }}" class="filter-btn">{{ collection.title }}</a>
          {%- endunless -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    <div class="collections-grid">
      {%- liquid
        assign featured_collections = section.settings.featured_collections
        if featured_collections == blank
          assign featured_collections = collections | where: 'published', true | slice: 0, 6
        endif
      -%}

      {%- for collection in featured_collections -%}
        {%- unless collection.id == blank -%}
          <a href="{{ collection.url }}" class="collection-card">
            <div class="card-image-container">
              {%- if collection.featured_image != blank -%}
                <img 
                  src="{{ collection.featured_image | image_url: width: 600 }}"
                  alt="{{ collection.featured_image.alt | escape }}"
                  class="card-image"
                  loading="lazy"
                >
              {%- else -%}
                <div class="card-image" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
              {%- endif -%}
              
              {%- if collection.products.size == 0 -%}
                <div class="card-badge sold-out">Coming Soon</div>
              {%- elsif collection.metafields.custom.featured == true -%}
                <div class="card-badge">Featured</div>
              {%- endif -%}
              
              <div class="card-overlay">
                <span>View Collection</span>
              </div>
            </div>
            
            <div class="card-content">
              <div class="card-category">{{ collection.metafields.custom.category | default: "Collection" }}</div>
              <h3 class="card-title">{{ collection.title }}</h3>
              <p class="card-description">
                {%- if collection.description != blank -%}
                  {{ collection.description | strip_html | truncate: 100 }}
                {%- else -%}
                  Explore this unique collection of hand-painted artworks.
                {%- endif -%}
              </p>
              <div class="card-meta">
                <div class="card-price">
                  {%- if collection.products.size > 0 -%}
                    {%- assign min_price = collection.products.first.price -%}
                    {%- assign max_price = collection.products.first.price -%}
                    {%- for product in collection.products -%}
                      {%- if product.price < min_price -%}
                        {%- assign min_price = product.price -%}
                      {%- endif -%}
                      {%- if product.price > max_price -%}
                        {%- assign max_price = product.price -%}
                      {%- endif -%}
                    {%- endfor -%}
                    
                    {%- if min_price == max_price -%}
                      {{ min_price | money }}
                    {%- else -%}
                      {{ min_price | money }} - {{ max_price | money }}
                    {%- endif -%}
                  {%- else -%}
                    Coming Soon
                  {%- endif -%}
                </div>
                <div class="card-artist">
                  {{ collection.products.size }} 
                  {%- if collection.products.size == 1 -%}
                    piece
                  {%- else -%}
                    pieces
                  {%- endif -%}
                </div>
              </div>
            </div>
          </a>
        {%- endunless -%}
      {%- else -%}
        {%- comment -%} Fallback content when no collections are available {%- endcomment -%}
        <div class="collection-card">
          <div class="card-image-container">
            <div class="card-image" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
            <div class="card-badge">Featured</div>
          </div>
          <div class="card-content">
            <div class="card-category">Signature</div>
            <h3 class="card-title">Urban Canvas</h3>
            <p class="card-description">Street art meets contemporary design in this exclusive collection.</p>
            <div class="card-meta">
              <div class="card-price">$299 - $599</div>
              <div class="card-artist">12 pieces</div>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>

    {%- if section.settings.show_view_all -%}
      <div class="collections-cta">
        <a href="{{ routes.collections_url }}" class="view-all-btn">
          {{ section.settings.view_all_text | default: "View All Collections" }}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 17L17 7M17 7H7M17 7V17"></path>
          </svg>
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Artisan Collections"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover our curated collections of hand-painted masterpieces, each telling a unique story through art and craftsmanship."
    },
    {
      "type": "collection_list",
      "id": "featured_collections",
      "label": "Featured collections",
      "limit": 6
    },
    {
      "type": "checkbox",
      "id": "show_filters",
      "label": "Show collection filters",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all button text",
      "default": "View All Collections"
    }
  ],
  "presets": [
    {
      "name": "Collections"
    }
  ]
}
{% endschema %}