
{%- style -%}
  .hero-section-{{ section.id }} {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: var(--gradient-dark);
    padding: var(--spacing-xl) var(--spacing-md);
  }
  
  .hero-background-{{ section.id }} {
    position: absolute;
    inset: 0;
    z-index: 1;
  }
  
  .hero-floating-dots-{{ section.id }} {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 2;
  }
  
  .floating-dot {
    position: absolute;
    width: 8px;
    height: 8px;
    background: rgb(var(--color-accent-gold));
    border-radius: 50%;
    animation: float 3s ease-in-out infinite;
    box-shadow: var(--shadow-glow-gold);
    opacity: 0.7;
  }
  
  .hero-content-{{ section.id }} {
    position: relative;
    z-index: 10;
    text-align: center;
    color: rgb(var(--color-text-primary));
    max-width: 64rem;
    width: 100%;
    padding: 0;
  }
  
  .hero-badge-{{ section.id }} {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 2rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 2rem;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }
  
  .hero-title-{{ section.id }} {
    font-family: var(--font-heading);
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 900;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin-bottom: 2rem;
    background: var(--gradient-gold);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
    animation: fadeInUp 0.8s ease-out 0.4s both;
  }
  
  .hero-description-{{ section.id }} {
    font-size: clamp(1rem, 2vw, 1.25rem);
    opacity: 0.9;
    margin-bottom: 3rem;
    max-width: 42rem;
    margin-left: auto;
    margin-right: auto;
    animation: fadeInUp 0.8s ease-out 0.8s both;
  }
  
  .hero-buttons-{{ section.id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    animation: fadeInUp 0.8s ease-out 1s both;
  }
  
  @media (max-width: 768px) {
    .hero-buttons-{{ section.id }} {
      flex-direction: column;
      align-items: center;
    }
    
    .hero-btn {
      width: 100%;
      max-width: 20rem;
      justify-content: center;
    }
  }
{%- endstyle -%}

<section class="hero-section" id="hero">
  <!-- Floating Dots Decoration -->
  <div class="hero-floating-dots">
    <div class="floating-dot" style="top: 10%; left: 15%; animation-delay: 0s;"></div>
    <div class="floating-dot" style="top: 20%; right: 20%; animation-delay: 1s;"></div>
    <div class="floating-dot" style="top: 60%; left: 10%; animation-delay: 2s;"></div>
    <div class="floating-dot" style="bottom: 30%; right: 15%; animation-delay: 0.5s;"></div>
    <div class="floating-dot" style="top: 45%; left: 5%; animation-delay: 1.5s;"></div>
    <div class="floating-dot" style="top: 75%; right: 25%; animation-delay: 2.5s;"></div>
  </div>

  <div class="container">
    <div class="hero-content">
      {%- if section.settings.show_badge -%}
        <div class="hero-badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="3"></circle>
            <path d="M12 1v6M12 17v6M4.22 4.22l4.24 4.24M15.54 15.54l4.24 4.24M1 12h6M17 12h6M4.22 19.78l4.24-4.24M15.54 8.46l4.24-4.24"></path>
          </svg>
          {{ section.settings.badge_text | default: "WHERE ART MEETS STREET" }}
        </div>
      {%- endif -%}

      <h1 class="hero-title cinematic-title">
        {{ section.settings.title | default: "Painted<br><span style='display: inline-block;'><span style='color: rgb(var(--color-accent-gold));'>{</span>Juttay<span style='color: rgb(var(--color-accent-gold));'>}</span></span>" }}
      </h1>

      <!-- Main Content Card -->
      <div class="content-card">
        <!-- Decorative elements -->
        <div style="position: absolute; top: 1.5rem; left: 1.5rem; color: rgb(var(--color-accent-gold)); font-size: 1.5rem;">✦</div>
        <div style="position: absolute; top: 1.5rem; right: 1.5rem; color: rgb(var(--color-accent-gold)); font-size: 1.5rem;">✦</div>
        
        <div style="text-align: center;">
          <div style="display: flex; align-items: center; justify-content: center; gap: 1rem; margin-bottom: 1.5rem;">
            <span style="color: rgb(var(--color-accent-gold)); font-size: 1.125rem;">✦</span>
            <span style="color: rgb(var(--color-accent-gold)); font-weight: 500; letter-spacing: 0.1em; font-size: 0.875rem; text-transform: uppercase;">
              Where Art Meets Street
            </span>
            <span style="color: rgb(var(--color-accent-gold)); font-size: 1.125rem;">✦</span>
          </div>
          
          <h2 style="font-size: clamp(1.875rem, 4vw, 2.5rem); font-weight: 700; margin-bottom: 1.5rem;">
            Hand-painted sneakers that tell stories
          </h2>
          
          <p class="hero-description">
            Each pair is a canvas, each step is a statement. Witness the fusion of 
            <span style="color: rgb(var(--color-accent-red)); font-weight: 500;">Pakistani street culture</span> 
            with contemporary art, where every brushstroke carries the soul of the artist and every design tells a 
            story of 
            <span style="color: rgb(var(--color-accent-red)); font-weight: 500;">rebellion, beauty, and craftsmanship</span>.
          </p>

          <!-- Action buttons -->
          <div class="hero-buttons">
            {%- if section.settings.primary_button_label != blank -%}
              <a href="{{ section.settings.primary_button_link | default: '/collections' }}" class="btn btn-primary">
                <span>✦</span>
                <span>{{ section.settings.primary_button_label | default: "Explore The Gallery" }}</span>
              </a>
            {%- endif -%}
            
            {%- if section.settings.secondary_button_label != blank -%}
              <a href="{{ section.settings.secondary_button_link | default: '#custom-order' }}" class="btn btn-secondary">
                <span>◉</span>
                <span>{{ section.settings.secondary_button_label | default: "Commission Artwork" }}</span>
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>

      <!-- Features banner -->
      <div class="features-banner">
        <div class="features-list">
          <div class="feature-item">
            <div class="feature-dot"></div>
            <span>LIMITED DROPS</span>
          </div>
          <div class="feature-item">
            <div class="feature-dot"></div>
            <span>AUTHENTIC ARTISTRY</span>
          </div>
          <div class="feature-item">
            <div class="feature-dot"></div>
            <span>EXCLUSIVE PIECES</span>
          </div>
        </div>
      </div>

      <!-- Enter the vault -->
      <div style="text-align: center; margin-top: 2rem;">
        <button style="background: none; border: none; color: rgb(var(--color-text-secondary)); transition: color var(--transition-base); font-size: 1.125rem; font-weight: 500; letter-spacing: 0.05em; cursor: pointer;" 
                onmouseover="this.style.color='rgb(var(--color-text-primary))'" 
                onmouseout="this.style.color='rgb(var(--color-text-secondary))'">
          Enter The Vault
          <div style="margin-top: 0.5rem;">
            <svg style="width: 1.5rem; height: 1.5rem; animation: bounce 2s infinite;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
          </div>
        </button>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes bounce {
    0%, 20%, 53%, 80%, 100% {
      transform: translateY(0);
    }
    40%, 43% {
      transform: translateY(-30px);
    }
    70% {
      transform: translateY(-15px);
    }
    90% {
      transform: translateY(-4px);
    }
  }
</style>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Painted {Juttay}"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Hand-painted sneakers that tell stories. Each pair is a canvas, each step is a statement. Premium custom art sneakers by Pakistani artists."
    },
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show badge",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "LIMITED DROPS"
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Primary button label",
      "default": "Explore The Gallery"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary button label",
      "default": "Commission Artwork"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
