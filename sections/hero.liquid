
{%- style -%}
  .hero-section-{{ section.id }} {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(135deg, hsl(262 83% 58%) 0%, hsl(262 83% 48%) 100%);
  }
  
  .hero-background-{{ section.id }} {
    position: absolute;
    inset: 0;
    z-index: 1;
  }
  
  .hero-pattern-{{ section.id }} {
    position: absolute;
    inset: 0;
    opacity: 0.1;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Ccircle cx='20' cy='20' r='4'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }
  
  .hero-content-{{ section.id }} {
    position: relative;
    z-index: 10;
    text-align: center;
    color: white;
    max-width: 64rem;
    padding: 0 2rem;
  }
  
  .hero-badge-{{ section.id }} {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 2rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 2rem;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }
  
  .hero-title-{{ section.id }} {
    font-family: 'Playfair Display', serif;
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 2rem;
    animation: fadeInUp 0.8s ease-out 0.4s both;
  }
  
  .hero-description-{{ section.id }} {
    font-size: clamp(1rem, 2vw, 1.25rem);
    opacity: 0.9;
    margin-bottom: 3rem;
    max-width: 42rem;
    margin-left: auto;
    margin-right: auto;
    animation: fadeInUp 0.8s ease-out 0.8s both;
  }
  
  .hero-buttons-{{ section.id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    animation: fadeInUp 0.8s ease-out 1s both;
  }
  
  @media (max-width: 768px) {
    .hero-buttons-{{ section.id }} {
      flex-direction: column;
      align-items: center;
    }
    
    .hero-btn {
      width: 100%;
      max-width: 20rem;
      justify-content: center;
    }
  }
{%- endstyle -%}

<section class="hero-section-{{ section.id }}" id="hero">
  <div class="hero-background-{{ section.id }}">
    <div class="hero-pattern-{{ section.id }}"></div>
    {%- if section.settings.background_image != blank -%}
      <img 
        src="{{ section.settings.background_image | image_url: width: 1920 }}"
        alt="{{ section.settings.background_image.alt | escape }}"
        style="position: absolute; inset: 0; width: 100%; height: 100%; object-fit: cover; opacity: 0.3; z-index: 1;"
        loading="lazy"
      >
    {%- endif -%}
  </div>

  <div class="hero-content-{{ section.id }}">
    {%- if section.settings.show_badge -%}
      <div class="hero-badge-{{ section.id }}">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="3"></circle>
          <path d="M12 1v6M12 17v6M4.22 4.22l4.24 4.24M15.54 15.54l4.24 4.24M1 12h6M17 12h6M4.22 19.78l4.24-4.24M15.54 8.46l4.24-4.24"></path>
        </svg>
        {{ section.settings.badge_text | default: "LIMITED DROPS" }}
      </div>
    {%- endif -%}

    <h1 class="hero-title-{{ section.id }}">
      {{ section.settings.title | default: "Painted {Juttay}" }}
    </h1>

    <p class="hero-description-{{ section.id }}">
      {{ section.settings.description | default: "Hand-painted sneakers that tell stories. Each pair is a canvas, each step is a statement. Premium custom art sneakers by Pakistani artists." }}
    </p>

    <div class="hero-buttons-{{ section.id }}">
      {%- if section.settings.primary_button_label != blank -%}
        <a href="{{ section.settings.primary_button_link | default: '#collections' }}" class="hero-btn hero-btn--primary">
          {{ section.settings.primary_button_label }}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 17L17 7M17 7H7M17 7V17"></path>
          </svg>
        </a>
      {%- endif -%}

      {%- if section.settings.secondary_button_label != blank -%}
        <a href="{{ section.settings.secondary_button_link | default: '#custom-order' }}" class="hero-btn hero-btn--secondary">
          {{ section.settings.secondary_button_label }}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2L15.09 8.26L22 9L17 14L18.18 21L12 17.77L5.82 21L7 14L2 9L8.91 8.26L12 2Z"></path>
          </svg>
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Painted {Juttay}"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Hand-painted sneakers that tell stories. Each pair is a canvas, each step is a statement. Premium custom art sneakers by Pakistani artists."
    },
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show badge",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "LIMITED DROPS"
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Primary button label",
      "default": "Explore The Gallery"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary button label",
      "default": "Commission Artwork"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
