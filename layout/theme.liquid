
<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; {{ current_tags | join: ', ' }}{% endif -%}
      {%- if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    {{ content_for_header }}

    {% style %}
      :root {
        /* Painted Juttay Brand Colors - Gritty Urban Palette */
        --color-primary: 20, 20, 20; /* Deep black */
        --color-secondary: 139, 0, 0; /* Deep red */
        --color-accent: 255, 255, 255; /* Pure white */
        --color-neutral: 128, 128, 128; /* Urban grey */
        --color-dark-grey: 64, 64, 64;
        --color-light-grey: 240, 240, 240;
        
        /* Typography */
        --font-heading-family: 'Oswald', 'Arial Black', sans-serif;
        --font-body-family: 'Open Sans', 'Arial', sans-serif;
        --font-accent-family: 'Permanent Marker', cursive;
        
        /* Spacing */
        --spacing-xs: 0.5rem;
        --spacing-sm: 1rem;
        --spacing-md: 2rem;
        --spacing-lg: 3rem;
        --spacing-xl: 4rem;
        
        /* Transitions */
        --transition-fast: 0.2s ease;
        --transition-medium: 0.4s ease;
        --transition-slow: 0.6s ease;
        
        /* Shadows */
        --shadow-light: 0 2px 8px rgba(0, 0, 0, 0.1);
        --shadow-medium: 0 4px 16px rgba(0, 0, 0, 0.2);
        --shadow-heavy: 0 8px 32px rgba(0, 0, 0, 0.3);
        
        /* Header Heights */
        --header-height-desktop: 75px;
        --header-height-mobile: 60px;
      }

      * {
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
        font-size: 62.5%;
      }

      body {
        margin: 0;
        font-family: var(--font-body-family);
        font-size: 1.6rem;
        line-height: 1.6;
        color: rgb(var(--color-accent));
        background: linear-gradient(135deg, rgb(var(--color-primary)) 0%, rgb(var(--color-dark-grey)) 100%);
        overflow-x: hidden;
      }

      .cinematic-title {
        font-family: var(--font-accent-family);
        background: linear-gradient(135deg, rgb(var(--color-secondary)) 0%, #ff4444 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 3px 3px 0px rgb(var(--color-secondary));
      }

      /* Graffiti and Street Art Elements */
      .graffiti-bg {
        position: relative;
      }

      .graffiti-bg::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%238b0000' fill-opacity='0.05'%3E%3Cpath d='M30 30c0-11.046-8.954-20-20-20s-20 8.954-20 20 8.954 20 20 20 20-8.954 20-20zm-20 16c-8.837 0-16-7.163-16-16s7.163-16 16-16 16 7.163 16 16-7.163 16-16 16z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        opacity: 0.3;
        pointer-events: none;
      }

      .paint-splash {
        position: absolute;
        width: 100px;
        height: 100px;
        background: rgb(var(--color-secondary));
        border-radius: 50% 20% 50% 30%;
        opacity: 0.1;
        animation: float 6s ease-in-out infinite;
      }

      /* Paint drip animation */
      @keyframes paintDrip {
        0% { transform: translateY(-100%) scaleY(0); opacity: 0; }
        50% { opacity: 1; }
        100% { transform: translateY(0) scaleY(1); opacity: 0.8; }
      }

      .paint-drip {
        position: absolute;
        width: 4px;
        background: linear-gradient(to bottom, rgb(var(--color-secondary)), transparent);
        animation: paintDrip 2s ease-out infinite;
        animation-delay: var(--delay, 0s);
      }

      /* Street art hover effects */
      .splatter-hover {
        position: relative;
        overflow: hidden;
      }

      .splatter-hover::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        background: radial-gradient(circle, rgb(var(--color-secondary)) 20%, transparent 70%);
        transition: all 0.5s ease;
        transform: translate(-50%, -50%);
        opacity: 0;
        z-index: -1;
      }

      .splatter-hover:hover::before {
        width: 200px;
        height: 200px;
        opacity: 0.1;
      }

      /* Artistic float animation */
      @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(10deg); }
      }

      .artistic-float {
        animation: float 6s ease-in-out infinite;
      }

      /* Gallery card effects with street style */
      .gallery-card {
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        transform-style: preserve-3d;
        transform: rotate(-1deg);
        border: 3px solid rgb(var(--color-primary));
        background: rgb(var(--color-accent));
      }

      .gallery-card:hover {
        transform: translateY(-8px) rotate(0deg);
        box-shadow: var(--shadow-heavy);
      }

      /* Smooth animations */
      .fade-in {
        animation: fadeIn 0.8s ease-out forwards;
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
      }

      .scale-hover {
        transition: transform 0.3s ease;
      }

      .scale-hover:hover {
        transform: scale(1.05);
      }

      /* Responsive utilities */
      .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      @media (min-width: 768px) {
        .container {
          padding: 0 2rem;
        }
      }

      /* Skewed button style */
      .btn-skewed {
        transform: skew(-5deg);
        transition: var(--transition-medium);
      }

      .btn-skewed span {
        transform: skew(5deg);
        display: inline-block;
      }

      .btn-skewed:hover {
        transform: skew(-5deg) translateY(-2px);
      }
    {% endstyle %}

    {{ 'theme.css' | asset_url | stylesheet_tag }}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;600;700&family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;1,400&family=Permanent+Marker&display=swap" rel="stylesheet">
  </head>

  <body class="template-{{ template.name }}">
    <a class="skip-to-content-link" href="#MainContent">
      {{ "accessibility.skip_to_text" | t }}
    </a>

    {% section 'header' %}

    <main id="MainContent" class="content-for-layout" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <script>
      window.shopUrl = '{{ request.origin }}';
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}',
        cart_url: '{{ routes.cart_url }}'
      };

      // Smooth scroll for anchor links
      document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
              target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          });
        });
      });
    </script>
  </body>
</html>
