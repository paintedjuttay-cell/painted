
<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; {{ current_tags | join: ', ' }}{% endif -%}
      {%- if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    {{ content_for_header }}

    {% style %}
      :root {
        --font-body-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --font-heading-family: 'Playfair Display', serif;
        
        --color-background: 0 0% 100%;
        --color-foreground: 224 71% 4%;
        --color-primary: 262 83% 58%;
        --color-primary-foreground: 210 20% 98%;
        --color-secondary: 210 40% 96%;
        --color-secondary-foreground: 222.2 84% 4.9%;
        --color-muted: 210 40% 96%;
        --color-muted-foreground: 215.4 16.3% 46.9%;
        --color-border: 214.3 31.8% 91.4%;
        --color-card: 0 0% 100%;
        --color-card-foreground: 224 71% 4%;
      }

      .dark {
        --color-background: 224 71% 4%;
        --color-foreground: 213 31% 91%;
        --color-primary: 262 83% 58%;
        --color-primary-foreground: 210 20% 98%;
        --color-secondary: 222.2 84% 4.9%;
        --color-secondary-foreground: 210 40% 98%;
        --color-muted: 223 47% 11%;
        --color-muted-foreground: 215.4 16.3% 56.9%;
        --color-border: 216 34% 17%;
        --color-card: 224 71% 4%;
        --color-card-foreground: 213 31% 91%;
      }

      * {
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
        font-size: 62.5%;
      }

      body {
        margin: 0;
        font-family: var(--font-body-family);
        font-size: 1.6rem;
        line-height: 1.6;
        color: hsl(var(--color-foreground));
        background-color: hsl(var(--color-background));
        overflow-x: hidden;
      }

      .cinematic-title {
        font-family: var(--font-heading-family);
        background: linear-gradient(135deg, hsl(var(--color-primary)) 0%, hsl(262 83% 68%) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      /* Paint drip animation */
      @keyframes paintDrip {
        0% { transform: translateY(-100%) scaleY(0); opacity: 0; }
        50% { opacity: 1; }
        100% { transform: translateY(0) scaleY(1); opacity: 0.8; }
      }

      .paint-drip {
        position: absolute;
        width: 4px;
        background: linear-gradient(to bottom, hsl(var(--color-primary)), transparent);
        animation: paintDrip 2s ease-out infinite;
        animation-delay: var(--delay, 0s);
      }

      /* Gallery card effects */
      .gallery-card {
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        transform-style: preserve-3d;
      }

      .gallery-card:hover {
        transform: translateY(-8px) rotateX(5deg);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
      }

      /* Artistic float animation */
      .artistic-float {
        animation: artisticFloat 6s ease-in-out infinite;
      }

      @keyframes artisticFloat {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        33% { transform: translateY(-10px) rotate(1deg); }
        66% { transform: translateY(5px) rotate(-1deg); }
      }

      /* Splatter hover effect */
      .splatter-hover {
        position: relative;
        overflow: hidden;
      }

      .splatter-hover::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        background: radial-gradient(circle, hsl(var(--color-primary)) 20%, transparent 70%);
        transition: all 0.5s ease;
        transform: translate(-50%, -50%);
        opacity: 0;
        z-index: -1;
      }

      .splatter-hover:hover::before {
        width: 200px;
        height: 200px;
        opacity: 0.1;
      }

      /* Smooth animations */
      .fade-in {
        animation: fadeIn 0.8s ease-out forwards;
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
      }

      .scale-hover {
        transition: transform 0.3s ease;
      }

      .scale-hover:hover {
        transform: scale(1.05);
      }

      /* Responsive utilities */
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      @media (min-width: 768px) {
        .container {
          padding: 0 2rem;
        }
      }
    {% endstyle %}

    {{ 'theme.css' | asset_url | stylesheet_tag }}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
  </head>

  <body class="template-{{ template.name }}">
    <a class="skip-to-content-link" href="#MainContent">
      {{ "accessibility.skip_to_text" | t }}
    </a>

    {% section 'header' %}

    <main id="MainContent" class="content-for-layout" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <script>
      window.shopUrl = '{{ request.origin }}';
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}',
        cart_url: '{{ routes.cart_url }}'
      };

      // Smooth scroll for anchor links
      document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
              target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          });
        });
      });
    </script>
  </body>
</html>
